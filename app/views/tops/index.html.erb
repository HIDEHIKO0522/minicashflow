<div class="main_flow">

    <div class="main_flow_month_data_grafic">
    
    </div>
    <div class="main_flow_month_data">
        <table class="attr3">
        <colgroup>
            <col style="width:16%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
            <col style="width:7%;">
        </colgroup>
        <thead>
            <tr>
              <th>項目</th>
              <th>1月</th>
              <th>2月</th>
              <th>3月</th>
              <th>4月</th>
              <th>5月</th>
              <th>6月</th>
              <th>7月</th>
              <th>8月</th>
              <th>9月</th>
              <th>10月</th>
              <th>11月</th>
              <th>12月</th>
            </tr>
        </thead>
        <% @flows.each do |flow| %>       
            <tr>
                <td><%= link_to '内訳を見る', "/flows/#{flow.id}", method: :get,class: 'btn btn-default' %> </td>
                <td><%= flow.year_month_day&.strftime("%Y年%-m月%-d日") %></td>
                <td><%= flow.income_total.to_s(:delimited, delimiter: ',') %>円</td>
                <td><%= flow.expense_total.to_s(:delimited, delimiter: ',') %>円</td>
                <td><%= (flow.income_total - flow.expense_total).to_s(:delimited, delimiter: ',') %>円</td>
            </tr>
        <% end %>     
        </table>
    
    
    
    
    </div>




